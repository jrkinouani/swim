<main class="resa">
  <div class="container">
  <div class="row" id="content_page_index">
    <div class=" col-lg-offset-3 col-lg-6 col-sm-6 col-sm-offset-3 col-xs-12" id="content_page_show">
    <div class="text-center">
      <h3 class="title_résa-index">Pour faire une réservation choisissez une date et un créneau</h3>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12" >
      <%= form_for @reservationgym do | f |%>
          <%= f.date_field :start,  class: "form-control"  %>
      </div>
       <div class="col-md-6 col-sm-6 col-xs-12">
          <%= f.hidden_field :aquagym_id, value: @aquagym.id %>
      </div>
            <div class="text-center">
              <%= f.submit 'Validez votre location', :class => "btn btn-primary navbar-btn"%>
            </div>
      <% end %>
    </div>
  </div>
</div>
</main>
 <script>
 $(function() {
        $('#start').datepicker({
                    dateFormat: 'dd-mm-yy',
                    monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin','Juillet','Août',
                    'Septembre','Octobre','Novembre','Décembre'],
                    dayNamesMin: ['D','L','M','M','J','V','S'],
                    minDate: 0,
                    maxDate: '1m',
                    onSelect: function(selected) {
                        var newdate = new Date($("#start").datepicker("getDate"));
                        newdate.setDate(newdate.getDate() + 1);
                        $('#end_at').datepicker("option","minDate", newdate);
                    }
        });
    })
</script>
